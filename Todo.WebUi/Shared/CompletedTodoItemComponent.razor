<div class="flex flex-row">
    <div class="flex rounded-l-lg py-2" style="background-color: @Item.Category.Color">
        <span style="writing-mode: vertical-rl;" class="selection:bg-grey-800 selection:text-text-grey-100 text-primary-700 -rotate-180 self-center pl-1 text-[0.75em] font-bold text-slate-50">@Item.Category.CategoryName</span>
    </div>

    <div class="flex flex-1 flex-col items-stretch gap-0 bg-grey-500 hover:bg-grey-300 p-2 transition ease-in place-content-center">
        <div class="flex flex-row">
            <label class="selection:bg-grey-800 selection:text-text-grey-100 font-medium text-white ">@Item.Title</label>
            <label class="text-text-grey-300 selection:bg-grey-800 selection:text-text-grey-100 ml-2 self-center  text-xs text-gray-600 xs:hidden sm:inline-block">@Item.CompletedDate</label>
        </div>
        <label class="text-text-grey-300 selection:bg-grey-800 selection:text-text-grey-100 text-sm text-gray-500 ">@Item.Description</label>
    </div>

    

    <div class="flex rounded-r-lg bg-red-500 p-2">
        <button class="flex-auto self-center outline-0" @onclick="RemoveComplaetedItem" aria-label="remove item">
            <svg xmlns="http://www.w3.org/2000/svg" fill="rgb(239 68 68)" viewBox="0 0 24 24" stroke-width="1.1" stroke="white" class="h-6 w-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
            </svg>
        </button>
    </div>

    
</div>

    @code {
        [Parameter]
        public TodoItem Item { get; set; }

        [Parameter]
        public EventCallback<TodoItem> OnRemoveItem { get; set; }

        public async Task RemoveComplaetedItem(MouseEventArgs e)
        {
            await OnRemoveItem.InvokeAsync(Item);
        }
   }

